{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C++ build Single file",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "${file}",
                "-pipe",
                "-o",
                "${fileDirname}${pathSeparator}${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "C++ build Project",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "*.cpp",
                "*.h",
                "-pipe",
                "-o",
                "${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build"
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cpp.exe build active file",
            "command": "C:\\TDM-GCC-64\\bin\\cpp.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: C:\\TDM-GCC-64\\bin\\cpp.exe"
        },
        {
